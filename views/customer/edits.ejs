<form action="/edit/<%= customers._id %>" method="post">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstname">First Name</label>
            <input type="text" class="form-control" name="fname" id="fname" value="<%=customers.firstname%>"
                placeholder="Enter First Name" required>
        </div>
        <div class="col">
            <label for="lastname">Last Name</label>
            <input type="text" class="form-control" name="lname" id="lname" value="<%=customers.lastname%>"
                placeholder="Enter Last Name" required>
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="email">E-mail</label>
            <input type="email" class="form-control" name="email" id="email" value="<%=customers.email%>"
                placeholder="Enter E-mail" required>
        </div>
        <div class="col">
            <label for="role">Role</label>
            <select class="form-select" aria-label="Default select example" name="role" required>
                <option none selected disabled>---Select Option---</option>
                <option value="Management">Management</option>
                <option value="Staff">Staff</option>

            </select>
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="Password">Password</label>
            <input type="Password" class="form-control" name="password" value="<%=customers.password%>" id="Password"
                placeholder="Enter Password" required>
        </div>
        <div class="col">
            <label for="confirmpassword">Confirm-password</label>
            <input type="confirmpassword" class="form-control" name="confirmpassword" id="confirmpassword"
                value="<%=customers.confirmpassword%>" placeholder="Enter Confirm-password" required>
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="Status">Status</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="status" id="flexRadioDefault1" value="Active">
                <label class="form-check-label" for="flexRadioDefault1"> Active </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="status" id="flexRadioDefault2" value="Inactive">
                <label class="form-check-label" for="flexRadioDefault2">Inactive</label>
            </div>
        </div>
        <div class="col">
            <label for="phoneno">phone no</label>
            <input type="nuymber" class="form-control" name="phoneno" id="phoneno" value="<%=customers.phoneno%>"
                placeholder="Enter phone no" required>
        </div>
    </div>
    <div class=" form-group mb-4">
        <button type="submit" class="btn btn-primary"> Update </button>
        <a href="/home" class="btn btn-danger">Cancel</a>
    </div>
</form>