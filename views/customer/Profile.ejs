<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <span>
        <h1 class="h2">
            <%=customers.firstname%>
                <%=customers.lastname%>
        </h1>
    </span>

</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/home">Customers</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <%=customers.firstname%>
                            <%=customers.lastname%>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<ul class="list-group">
    <li class="list-group-item">
        <div class="row">
            <div class="col"><b>User ID:</b></div>
            <div class="col">
                <%= customers._id %>
            </div>
        </div>
    </li>

    <li class="list-group-item">
        <div class="row">
            <div class="col"><b>Name:</b></div>
            <div class="col">
                <%=customers.firstname%>
                    <%=customers.lastname%>
            </div>
        </div>
    </li>

    <li class="list-group-item">
        <div class="row">
            <div class="col"><b>Email:</b></div>
            <div class="col">
                <%=customers.email%>
            </div>
        </div>
    </li>

    <li class="list-group-item">
        <div class="row">
            <div class="col"><b>Role:</b></div>
            <div class="col">
                <%=customers.role%>
            </div>
        </div>
    </li>

    <li class="list-group-item">
        <div class="row">
            <div class="col"><b>Status:</b></div>
            <div class="col">
                <%=customers.status%>
            </div>
        </div>
    </li>

    <li class="list-group-item">
        <div class="row">
            <div class="col"><b>Created on :</b></div>
            <div class="col">
                <%= new Date(customers.createdAt).toLocaleString(undefined, {dateStyle: 'short' , timeStyle: 'short' })
                    %>
            </div>
        </div>
    </li>

    <li class="list-group-item">
        <div class="row">
            <div class="col"><b>Updated on:</b></div>
            <div class="col">
                <%= new Date(customers.updatedAt).toLocaleString(undefined, {dateStyle: 'short' , timeStyle: 'short' })
                    %>
            </div>
        </div>
    </li>
</ul>
<br><br>
<a href="/profilereset" class="btn btn-primary ms-1">Reset Password</a>
<a href="/home" class="btn btn-danger ms-1">Back</a>